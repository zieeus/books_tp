html
  head
    title Books
    script(src="https://cdn.tailwindcss.com")
  body
    div(class="min-h-screen flex items-center justify-center bg-gray-100")
      div(class="bg-white p-10 rounded shadow-lg")
        h1(class="text-2xl mb-5") Books
        ul(class="list-disc pl-5")
          each book in books
            li(class="mb-2")= `${book.title} by ${book.author}`
        a(href="/logout" class="block mt-4 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Logout
